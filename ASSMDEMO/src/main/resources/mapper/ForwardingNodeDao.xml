<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="zjr.assm.demo.dao.ForwardingNodeDao">
    <select id="getNodeById" parameterType="java.lang.String" resultType="zjr.assm.demo.po.ForwardingNode">
        SELECT * FROM forwarding_node WHERE id = #{id}
    </select>

    <select id="getForwardingNodeNum" resultType="int">
        SELECT COUNT(id) FROM forwarding_node
    </select>
</mapper>